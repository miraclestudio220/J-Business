<!-- NOTIFICATION -->

<div id="status-msg"><div class="check"><i class="fas fa-check"></i></div><span id="status-text">Demande transmise avec succès !</span></div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
// CURSOR
const dot = document.getElementById('cursor-dot');
const ring = document.getElementById('cursor-ring');
document.addEventListener('mousemove', e => {
    dot.style.left = e.clientX + 'px'; dot.style.top = e.clientY + 'px';
    ring.style.left = e.clientX + 'px'; ring.style.top = e.clientY + 'px';
});
document.querySelectorAll('a,button,.btn-submit,.btn-primary,.btn-outline').forEach(el => {
    el.addEventListener('mouseenter', () => { ring.style.transform = 'translate(-50%,-50%) scale(1.6)'; ring.style.borderColor = 'var(--gold)'; });
    el.addEventListener('mouseleave', () => { ring.style.transform = 'translate(-50%,-50%) scale(1)'; ring.style.borderColor = 'var(--gold)'; });
});

// SCROLL EFFECTS
const header = document.getElementById('header');
const progress = document.getElementById('scroll-progress');
const backTop = document.getElementById('back-top');
window.addEventListener('scroll', () => {
    const scrolled = window.scrollY;
    const maxScroll = document.body.scrollHeight - window.innerHeight;
    progress.style.width = (scrolled / maxScroll * 100) + '%';
    header.classList.toggle('scrolled', scrolled > 80);
    backTop.classList.toggle('visible', scrolled > 400);
});

// MOBILE MENU
document.getElementById('hamburger').addEventListener('click', () => document.getElementById('mobile-menu').classList.add('open'));
document.getElementById('mobile-close').addEventListener('click', closeMobileMenu);
function closeMobileMenu() { document.getElementById('mobile-menu').classList.remove('open'); }

// REVEAL ON SCROLL
const observer = new IntersectionObserver(entries => {
    entries.forEach(e => { if(e.isIntersecting) e.target.classList.add('visible'); });
}, { threshold: 0.15 });
document.querySelectorAll('.reveal,.reveal-left,.reveal-right').forEach(el => observer.observe(el));

// COUNTER ANIMATION
const counterObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
        if(e.isIntersecting && !e.target.dataset.animated) {
            e.target.dataset.animated = true;
            const target = parseInt(e.target.dataset.target);
            let current = 0;
            const step = target / 60;
            const timer = setInterval(() => {
                current = Math.min(current + step, target);
                e.target.textContent = Math.round(current);
                if(current >= target) clearInterval(timer);
            }, 20);
        }
    });
}, { threshold: 0.5 });
document.querySelectorAll('.counter').forEach(el => counterObs.observe(el));

// SWIPERS
new Swiper(".mySwiper", { pagination: { el: ".mySwiper .swiper-pagination", clickable: true }, loop: true, autoplay: { delay: 4000 }, effect: 'fade' });
new Swiper(".miniSwiper", { pagination: { el: ".miniSwiper .swiper-pagination", clickable: true }, loop: true, autoplay: { delay: 3000 }, effect: 'fade' });

// BANKING CALCULATOR
function runLogic() {
    const amount = parseFloat(document.getElementById('loan-amount').value) || 0;
    const weeks = parseFloat(document.getElementById('loan-weeks').value) || 0;
    let rate = 0;
    if(weeks > 0) {
        if(weeks <= 2) rate = 0.20;
        else if(weeks <= 4) rate = 0.40;
        else if(weeks <= 6) rate = 0.60;
        else if(weeks <= 8) rate = 0.80;
        else rate = 1.00;
    }
    document.getElementById('rate-out').textContent = (rate * 100) + '%';
    document.getElementById('total-out').textContent = (amount * (1 + rate)).toFixed(2);
}

// FORM HANDLER
async function handleForm(e, service) {
    e.preventDefault();
    const form = e.target;
    const btn = form.querySelector('button[type="submit"]');
    btn.textContent = 'En cours...'; btn.disabled = true;

    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify({ ...object, service_tag: service });

    try {
        const res = await fetch('https://api.web3forms.com/submit', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
            body: json
        });
        if(res.status === 200) {
            showNotif(`Demande ${service} transmise avec succès !`);
            form.reset();
            if(service === 'Banque') runLogic();
        }
    } catch {
        showNotif('Erreur réseau. Contactez-nous via WhatsApp.', true);
    } finally {
        btn.textContent = service === 'Banque' ? 'Soumettre ma demande' : service === 'Coiffure' ? 'Réserver ma coupe' : service === 'Design' ? 'Demander un devis' : 'Commander l\'article';
        btn.disabled = false;
    }
}

function showNotif(msg, err = false) {
    const el = document.getElementById('status-msg');
    document.getElementById('status-text').textContent = msg;
    el.style.background = err ? 'var(--red)' : 'var(--black)';
    el.classList.add('show');
    setTimeout(() => el.classList.remove('show'), 5000);
}
</script>

</body>
</html>
